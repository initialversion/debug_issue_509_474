<div class="page-header">
  <h3>Verify #<%= @verify.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @verify.user.present? %>
          <a href="/users/<%= @verify.user_id %>">
            <%= @verify.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Recruiting event</dt>
      <dd>
        <% if @verify.recruiting_event.present? %>
          <a href="/recruiting_events/<%= @verify.recruiting_event_id %>">
            <%= @verify.recruiting_event.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/verifies" class="btn btn-primary">
        Back
      </a>
      <a href="/verifies/<%= @verify.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_verify/<%= @verify.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
