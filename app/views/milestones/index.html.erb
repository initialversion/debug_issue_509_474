<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Campus recruiting start</th>
        <th>Closed events start</th>
        <th>Bankweek</th>
        <th>Interviews start</th>
        <th>Actions</th>
      </tr>

      <% @milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.campus_recruiting_start %></td>
        <td><%= milestone.closed_events_start %></td>
        <td><%= milestone.bankweek %></td>
        <td><%= milestone.interviews_start %></td>
        <td>
          <a href="/milestones/<%= milestone.id %>" class="btn btn-primary">Show</a>
          <a href="/milestones/<%= milestone.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_milestone/<%= milestone.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @milestones, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
