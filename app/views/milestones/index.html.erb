<div class="page-header">
  <h1>
    Milestones
    <a href="/milestones/new" class="btn btn-lg btn-success">New Milestone</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "milestones_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :campus_recruiting_start, "Campus recruiting start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='campus_recruiting_startgteqPicker'>
                  <%= f.text_field :campus_recruiting_start_gteq, :class => "form-control", :placeholder => "Campus recruiting start greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='campus_recruiting_startlteqPicker'>
                  <%= f.text_field :campus_recruiting_start_lteq, :class => "form-control", :placeholder => "Campus recruiting start less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#campus_recruiting_startgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#campus_recruiting_startlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#campus_recruiting_startgteqPicker').on("dp.change", function (e) {
                  $('#campus_recruiting_startlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#campus_recruiting_startlteqPicker').on("dp.change", function (e) {
                  $('#campus_recruiting_startgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

