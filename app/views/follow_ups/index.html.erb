<div class="page-header">
  <h1>
    Follow ups
    <a href="/follow_ups/new" class="btn btn-lg btn-success">New Follow up</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Follow up type</th>
        <th>Touchpoint</th>
        <th>User</th>
        <th>Firm</th>
        <th>Contact</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @follow_ups.each do |follow_up| %>
      <tr>
        <td><%= follow_up.follow_up_type %></td>
        <td><%= follow_up.touchpoint_id %></td>
        <td><%= follow_up.user.email %></td>
        <td><%= follow_up.firm.name %></td>
        <td><%= follow_up.contact_id %></td>
        <td><%= follow_up.notes %></td>
        <td>
          <a href="/follow_ups/<%= follow_up.id %>" class="btn btn-primary">Show</a>
          <a href="/follow_ups/<%= follow_up.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_follow_up/<%= follow_up.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @follow_ups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
