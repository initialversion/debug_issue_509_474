<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Firm</th>
        <th>Group</th>
        <th>Division</th>
        <th>Title</th>
        <th>Photo</th>
        <th>Business card</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.firm_id %></td>
        <td><%= contact.group %></td>
        <td><%= contact.division %></td>
        <td><%= contact.title %></td>
        <td><%= contact.photo %></td>
        <td><%= contact.business_card %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn btn-primary">Show</a>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
