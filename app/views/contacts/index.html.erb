<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success">New Contact</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "contacts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :first_name_cont, "First name contains" %>
    <%= f.text_field :first_name_cont, :class => "form-control", :placeholder => "First name contains" %>
  </div>

<div class="form-group">
    <%= f.label :email_cont, "Email contains" %>
    <%= f.text_field :email_cont, :class => "form-control", :placeholder => "Email contains" %>
  </div>

<div class="form-group">
    <%= f.label :business_card_cont, "Business card contains" %>
    <%= f.text_field :business_card_cont, :class => "form-control", :placeholder => "Business card contains" %>
  </div>

<div class="form-group">
    <%= f.label :photo_cont, "Photo contains" %>
    <%= f.text_field :photo_cont, :class => "form-control", :placeholder => "Photo contains" %>
  </div>

<div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
    <%= f.label :division_cont, "Division contains" %>
    <%= f.text_field :division_cont, :class => "form-control", :placeholder => "Division contains" %>
  </div>

<div class="form-group">
    <%= f.label :group_cont, "Group contains" %>
    <%= f.text_field :group_cont, :class => "form-control", :placeholder => "Group contains" %>
  </div>

<div class="form-group">
    <%= f.label :last_name_cont, "Last name contains" %>
    <%= f.text_field :last_name_cont, :class => "form-control", :placeholder => "Last name contains" %>
  </div>

<div class="form-group">
    <%= f.label :phone_number_cont, "Phone number contains" %>
    <%= f.text_field :phone_number_cont, :class => "form-control", :placeholder => "Phone number contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :date, "Touchpoint Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='touchpointsgteqdatePicker'>
                  <%= f.text_field :touchpoints_date_gteq, :class => "form-control", :placeholder => "Touchpoint Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='touchpointslteqdatePicker'>
                  <%= f.text_field :touchpoints_date_lteq, :class => "form-control", :placeholder => "Touchpoint Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#touchpointsgteqdatePicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#touchpointslteqdatePicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#touchpointsgteqdatePicker').on("dp.change", function (e) {
                  $('#touchpointslteqdatePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#touchpointslteqdatePicker').on("dp.change", function (e) {
                  $('#touchpointsgteqdatePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :firm_name_cont, "Firm name contains" %>
      <%= f.text_field :firm_name_cont, :class => "form-control", :placeholder => "Firm name contains" %>
    </div>

<div class="form-group">
      <%= f.label :users_email_cont, "User email contains" %>
      <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/contacts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#contacts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Firm</th>
        <th>Group</th>
        <th>Division</th>
        <th>Title</th>
        <th>Photo</th>
        <th>Business card</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td>
          <% if contact.firm.present? %>
            <a href="/firms/<%= contact.firm.id %>">
              <%= contact.firm.name %>
            </a>
          <% end %>
        </td>
        <td><%= contact.group %></td>
        <td><%= contact.division %></td>
        <td><%= contact.title %></td>
        <td><%= contact.photo %></td>
        <td><%= contact.business_card %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn btn-primary">Show</a>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @contacts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
