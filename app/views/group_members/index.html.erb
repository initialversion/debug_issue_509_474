<div class="page-header">
  <h1>
    Group members
    <a href="/group_members/new" class="btn btn-lg btn-success">New Group member</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group</th>
        <th>User</th>
        <th>Is admin</th>
        <th>Actions</th>
      </tr>

      <% @group_members.each do |group_member| %>
      <tr>
        <td>
          <% if group_member.group.present? %>
            <a href="/groups/<%= group_member.group.id %>">
              <%= group_member.group.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if group_member.user.present? %>
            <a href="/users/<%= group_member.user.id %>">
              <%= group_member.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= group_member.is_admin %></td>
        <td>
          <a href="/group_members/<%= group_member.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == group_member.user %>
            <a href="/group_members/<%= group_member.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_group_member/<%= group_member.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @group_members, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
