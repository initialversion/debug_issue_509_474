<div class="page-header">
  <h3>Group Member #<%= @group_member.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Group</dt>
      <dd>
        <% if @group_member.group.present? %>
          <a href="/groups/<%= @group_member.group_id %>">
            <%= @group_member.group.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @group_member.user.present? %>
          <a href="/users/<%= @group_member.user_id %>">
            <%= @group_member.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Is admin</dt>
      <dd><%= @group_member.is_admin %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/group_members" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @group_member.user %>
        <a href="/group_members/<%= @group_member.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_group_member/<%= @group_member.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
